@model Fertilizer360.Models.Shop

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Shop";
}

<h2>Add Shop</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="AddShop" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Shop Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Image">Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" required />

        @if (!string.IsNullOrEmpty(Model?.Image))
        {
            <img src="@Model.Image" alt="Shop Image" class="img-thumbnail mt-2" width="150" />
        }
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <textarea asp-for="Address" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="tel" class="form-control" required pattern="[0-9]{10}" placeholder="Enter 10-digit phone number" />
    </div>

    <div class="form-group">
        <label asp-for="WorkTime">Work Time</label>
        <input asp-for="WorkTime" class="form-control" placeholder="e.g., 9 AM - 6 PM" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="District">District</label>
        <input asp-for="District" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="VillageOrTaluka">Village/Taluka</label>
        <input asp-for="VillageOrTaluka" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Save Shop</button>
    <a asp-action="Shop" class="btn btn-secondary mt-3">Cancel</a>
</form>
