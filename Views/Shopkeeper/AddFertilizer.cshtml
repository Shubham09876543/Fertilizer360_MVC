@model Fertilizer360.Models.Fertilizer
@{
    Layout = "~/Views/Shared/_LayoutShopkeeper.cshtml";
    ViewData["Title"] = "Add Fertilizer";
}

<h2>Add Fertilizer</h2>

<form asp-action="AddFertilizer" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Shop</label>
        <select asp-for="ShopId" class="form-control" asp-items="@(new SelectList(ViewBag.Shops, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Stocks</label>
        <input asp-for="Stocks" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
